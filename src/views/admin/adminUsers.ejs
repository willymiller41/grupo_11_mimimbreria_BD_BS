<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
<body>
    <%- include('../partials/header')  %>
    <main class="container-fluid">
        <div class="seccion-titulos">
            <h2>Administraci√≥n de Usuarios</h2>
        </div>
        <hr>
        <div class="container text-center">
            <div class="row justify-content-end">
                <div class="col-2">
                    <a href="/users/create">
                        <button type="submit" class="btn btn-success">Agregar Usuario</button>
                    </a>
                </div>
                <div class="col-2">
                    <a href="/admin/adminProducts">
                        <button type="submit" class="btn btn-success">Admin Productos</button>
                    </a>
                </div>
            </div>
            <table class="table table-success table-striped">
                <thead>
                  <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Avatar</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Email</th>
                    <th scope="col">Rol</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Eliminar</th>
                  </tr>
                </thead>
                <tbody>
                    <% users.forEach(function(user){ %>
                        <tr>
                            <th scope="row"><%= user.id %></th>
                            <td><img src="/img/avatars/<%= user.avatar  %>" alt="<%= user.email %>" class="img-thumbnail"></td>
                            <td><%= user.name %></td>
                            <td><%= user.surname %></td>
                            <td><%= user.email %></td>
                            <td><%= user.roles.role %></td>
                            <td>                                
                                <a href="/users/userEdit/<%= user.id %>">
                                    <button type="submit" class="btn btn-success"><i class="fas fa-edit"></i></button>
                                </a>
                            </td>
                            <td>
                                <a href="/users/userDelete/<%= user.id %>">
                                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            </div>
        </div>
    </main>
    <hr>
    <footer>
        <%- include('../partials/bs'); %>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>